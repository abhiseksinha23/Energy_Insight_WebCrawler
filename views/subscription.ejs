<%- include('partials/header2.ejs') %>
  <div class="container" style="padding-top:2em;">
    <section class="row mt-5 text-center">
      <div class="col-md-6 m-auto">
        <h1><i class="fas fa-newspaper fa-2x"></i></h1>
        <h2 class="display-6">SUBSCRIBE TO WIPRO ENERGY INSIGHT!!!</h2>
        <p class="lead">
          Enter your info to get update about posts of your favorite topics!!
        </p>
        <form action="/subscribed" method="POST">
          <div class="form-group">
            <input type="text" name="name" id="name" class="form-control" placeholder="Your Name"
              required />
          </div>
          <div class="form-group">
            <input type="email" name="email" id="email" class="form-control" placeholder="Email" required />
          </div>
          <div class="form-group">
            <input type="text" name="topic" id="topic" class="form-control" placeholder="Topic/keyword(eg-coal)" required />
          </div>
            <p>NOTE:- Subscribe for one topic at once(for all topics use "all" keyword.)</p>
          <button type="submit" class="btn btn-primary btn-block">
            Subscribe!
          </button>
        </form>
      </div>
    </section>
  </div>
