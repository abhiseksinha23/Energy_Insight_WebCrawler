<%- include('partials/header.ejs') %>
<h2 style="text-align:center;color:#ffffff;padding:0.25em 0em;"><u><%=sendData[2].toUpperCase()%></u></h2>

    <% data = sendData[1] %>
    <% if(data.length===0){%>
      <h2 style="text-align:center; color:#ffffff;">Sorry, Currently no article available on this topic.</h2>
    <% }else{%>
      <div class="container-fluid">
        <div class="row">
    <%  data.forEach((article)=>{ %>
      <%  if(article.image && article.title){ %>
        <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
        <div class="card" style="min-height:35rem;margin-bottom:1em;background-color:#494949;color:#ffffff;border:1px solid #9f9f9f;">
        <img class="card-img-top"  src=<%=article.image%> alt="Card image" style="width:100%;height:15em;" >
        <div class="card-body">
          <h5 class="card-title"><%=article.content%></h5>
          <p class="card-text"><%=article.title%></p>
          <p class="card-text"><%=article.date%></p>
          <a href="<%=article.link%>" target="_blank" class="btn btn-primary stretched-link">Read More..</a>
        </div>
        </div>
      </div>
            <%  } %>
    <%  }); %>
  </div>
</div>
  <% } %>





<%- include('partials/footer.ejs') %>
